{
  "name": "solid-notifications",
  "version": "1.0.0",
  "description": "A Solidjs toast notifications library",
  "author": {
    "name": "Nyloth9",
    "url": "https://github.com/Nyloth9"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npx tsup index.ts --format cjs,esm --dts && ncp index.css dist/index.css",
    "prepublishOnly": "npm run build"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "solid-js": "^1.9.3"
  },
  "keywords": [
    "toast",
    "solidjs",
    "solid",
    "notification",
    "alert",
    "message",
    "ui",
    "component",
    "solid-notifications"
  ],
  "license": "MIT"
}